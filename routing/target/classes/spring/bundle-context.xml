<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean name="sampleServiceHessianExporter" class="org.springframework.remoting.caucho.HessianServiceExporter" >
        <property name="service" ref="numberService" />
        <property name="serviceInterface" value="com.qsoft.service.UserService" />
    </bean>

    <bean id="sampleServiceServlet" class="com.qsoft.useranddevice.HttpHandlerExporter">
        <property name="target" ref="sampleServiceHessianExporter" />
    </bean>
</beans>